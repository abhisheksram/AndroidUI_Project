<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".intro_slides.IntroFragment2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/tamang_logo"
            app:layout_constraintBottom_toBottomOf="@+id/tamang_food"
            app:layout_constraintEnd_toStartOf="@+id/tamang_food"
            app:layout_constraintTop_toTopOf="@+id/tamang_food" />

        <TextView
            android:id="@+id/tamang_food"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center_horizontal|top"
            android:text="@string/tamang_foodservice"
            android:textColor="@color/Black"
            android:textSize="37sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/view"
            android:layout_width="300.62dp"
            android:layout_height="300.62dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/intro2_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/font_awesome_5"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/free_delivery"
            android:textColor="@color/intro_heading"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/yugothib"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="3sp"
            android:paddingHorizontal="40dp"
            android:text="@string/free_delivery_text"
            android:textAppearance="@style/free_deliver_text"
            android:textColor="@color/intro_text"
            android:textSize="@dimen/t16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:ignore="RtlSymmetry" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>